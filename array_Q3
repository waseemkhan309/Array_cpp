                 //Q:find the max and min in the array.
#include<iostream>
using namespace std;
int main (){
    int a[6]={5,2,4,1,7,3};
    int min=a[0];
    for (int i=1; i<6;i++){
        if(min>a[i]){
            min=a[i];
        }
    }
    cout<<"Minimum Value is : "<<min<<endl;
    //Max value
    int max=a[0];
    for (int i=1; i<6;i++){
        if(max<a[i]){
            max=a[i];
        }
    }
    cout<<"Max Value is : "<<max<<endl;
    return 0;
}
